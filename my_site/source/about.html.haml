        \
        = partial 'partials/CV'
      %a.btn.btn-primary{:download => "CV",:href => "http://bit.ly/2AYMtk9", :role => "button", :style => "margin-bottom: 10px"} Download
      %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button", :style => "margin-bottom: 15px"}
